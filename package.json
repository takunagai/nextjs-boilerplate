	"devDependencies": {
		"@axe-core/playwright": "^4.11.1",
		"@biomejs/biome": "^2.4.2",
		"@cloudflare/workers-types": "^4.20260219.0",
		"@next/bundle-analyzer": "^16.1.6",
		"@opennextjs/cloudflare": "^1.16.5",
