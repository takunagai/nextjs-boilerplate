		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"cross-env": "^10.1.0",
		"jsdom": "^28.1.0",
		"postcss": "^8",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^4.0.18",
		"web-vitals": "^5.1.0",
		"wrangler": "^4.66.0"
	},
	"overrides": {
		"next-auth": {
			"next": "$next"
